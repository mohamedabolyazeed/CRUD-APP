# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crud-app

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (for password reset and verification)
# SMTP Configuration - Works with Gmail, Outlook, or any SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative: Generic Email Configuration (fallback)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: Mailtrap Configuration (for testing only)
# MAILTRAP_HOST=smtp.mailtrap.io
# MAILTRAP_PORT=2525
# MAILTRAP_USER=your-mailtrap-username
# MAILTRAP_PASS=your-mailtrap-password

# Admin Configuration
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=

