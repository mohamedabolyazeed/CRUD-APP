    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "livereload": "^0.9.3",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.4"
  },
