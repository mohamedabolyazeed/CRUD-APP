  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "server": "nodemon server.js",
    "client": "cd client && bun start",
    "build": "cd client && bun run build",
    "install-client": "cd client && bun install",
    "heroku-postbuild": "bun run install-client && bun run build",
    "test": "echo 'No tests specified'",
    "lint": "echo 'No linting configured'",
    "create-admin": "node server/utils/createAdmin.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.3",
