<link
  rel="shortcut icon"
  href="./img/Black White Minimalist Professional Initial Logo.png"
  type="image/x-icon"
/>
<link rel="stylesheet" href="/mystyle.css" />
<div class="auth-container">
  <h2 class="text-center mb-4">Forgot Password</h2>

  <!-- Flash Messages -->
  <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
  <div class="alert alert-success" role="alert"><%= success_msg %></div>
  <% } %> <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
  <div class="alert alert-danger" role="alert"><%= error_msg %></div>
  <% } %>

  <form action="/auth/forgot-password" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter your registered email"
        required
      />
      <% if (typeof errors !== 'undefined' && errors.email) { %>
      <div class="error-message"><%= errors.email %></div>
      <% } %>
    </div>
    <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
  </form>

  <div class="text-center mt-3">
    <p><a href="/auth/signin">Back to Sign In</a></p>
    <p><a href="/auth/signup">Don't have an account? Sign Up</a></p>
  </div>

  <!-- Development Info -->
  <% if (process.env.NODE_ENV === 'development') { %>
  <div class="alert alert-info mt-3" role="alert">
    <strong>Development Mode:</strong> If email is not configured, check the
    console for the reset link.
  </div>
  <% } %>
</div>
